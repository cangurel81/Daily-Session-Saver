{
  "manifest_version": 2,
  "name": "Daily Session Saver",
  "version": "1.0",
  "description": "Automatically saves browser sessions daily and allows restoring them.",
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/circular.png"
    }
  }
}